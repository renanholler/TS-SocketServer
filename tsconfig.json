{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",  // Alterado para CommonJS para maior compatibilidade
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // Diretório de saída
    "rootDir": "./src"  // Diretório raiz do código-fonte
  },
  "include": ["src/**/*"],  // Inclui todos os arquivos dentro de src
  "exclude": ["node_modules"]  // Exclui a pasta node_modules
}
